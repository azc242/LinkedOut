{
	"name": "LinkedOut",
	"version": "1.0",
	"manifest_version": 2,
	"content_scripts": [
		{
			"matches": ["https://www.linkedin.com/feed*", "https://www.linkedin.com/feed/"],
			"js": ["block.js"]
		},
		{
			"matches": ["https://www.linkedin.com/*", "https://www.linkedin.com/"],
			"js": ["reload.js"]
		}
	],
	"icons": {
		"128": "images/linkedin128.png"
	},
	"background": {
		"persistent": false,
    "scripts":["background.js"]
  },
	"permissions": [
    "*://linkedin.com/*",
		"activeTab",
		"tabs",
		"webNavigation"
  ]
}
