{
  "name": "LinkedOut",
  "version": "0.0.2.4",
  "description": "Removes LinkedIn posts on your feed and replaces it with cute animals instead.",
  "manifest_version": 2,
  "content_scripts": [
		{
    "matches": ["https://www.linkedin.com/*"],
    "run_at": "document_start",
    "all_frames": true,
    "js": ["block.js", "clean.js"]
  }
	],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "settings/popup.html"
  },
  "options_page": "settings/options.html",
  "icons": {
    "16": "images/LinkedOut16.png",
    "48": "images/LinkedOut48.png",
    "128": "images/LinkedOut128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js https://www.google-analytics.com https://www.googletagmanager.com; object-src 'self'"
}
