{
  "name": "LinkedOut",
  "version": "0.0.1",
  "description": "Removes LinkedIn posts on your feed and replaces it with cute fluffy animals.",
  "manifest_version": 2,
  "content_scripts": [
		{
    "matches": ["https://www.linkedin.com/*"],
    "run_at": "document_start",
    "all_frames": true,
    "js": ["block.js"]
  }
	],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/LinkedOut16.png",
    "48": "images/LinkedOut48.png",
    "128": "images/LinkedOut128.png"
  },
  "permissions": [
    "tabs",
    "background",
    "storage"
  ]
}
